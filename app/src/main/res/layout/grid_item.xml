<?xml version="1.0" encoding="utf-8"?>
<com.mjm.solid.solidmanager.ui.RevealLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/grid_item_cardview"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/grid_item_thumbnail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/ic_imageviewer" />

            <TextView
                android:id="@+id/grid_item_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="#22000000"
                android:gravity="center_horizontal"
                android:padding="5dp"
                android:text="文件目录"
                android:textColor="#fff"
                android:textSize="15sp" />

            <TextView
                android:visibility="invisible"
                android:id="@+id/grid_item_path"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>


</com.mjm.solid.solidmanager.ui.RevealLayout>
